<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Shop">


        <com.jmm.util.ApplicationToolbar
            android:id="@+id/fragment_shop_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ATTitle="@string/shop"
            app:ATMenuIconVisibility="true"
            app:ATMenuIcon="@drawable/ic_shopping_cart"
            app:ATNavIcon="@drawable/ic_menu"
            app:ATTitleGravity="CENTER"
            app:layout_constraintTop_toTopOf="parent"
            android:minHeight="?attr/actionBarSize"
            />

        <include
            android:id="@+id/fragment_shop_search_view"
            layout="@layout/template_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_shop_toolbar"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_shop_search_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <!--  <fragment
            android:id="@+id/offers_fragment"
            android:name="com.jmm.shopping.ui.home.HomeShopOffers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_home_shop_offers"
            />
-->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp" />


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>