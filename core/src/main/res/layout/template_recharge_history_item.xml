<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8dp">

    <ImageView
        android:id="@+id/iv_operator_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_jio" />

    <TextView
        android:id="@+id/tv_recharge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="9699960540"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_operator_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_recharge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : "
        app:layout_constraintStart_toStartOf="@+id/tv_recharge_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_recharge_number" />

    <com.google.android.material.chip.Chip
        android:id="@+id/btn_recharge"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:checkable="false"
        android:text="Recharge"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_18sp"
        app:chipBackgroundColor="@color/white"
        app:chipEndPadding="@dimen/dimen_16dp"
        app:chipStartPadding="@dimen/dimen_16dp"
        app:chipStrokeColor="@color/colorPrimary"
        app:chipStrokeWidth="@dimen/dimen_1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recharge_amount" />

    <TextView
        android:id="@+id/tv_recharge_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="â‚¹100"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>