<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_nav"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.sampurna.pocketmoney.mlm.ui.welcome.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_onBoardingScreen"
            app:destination="@id/onBoardingScreen"
            app:launchSingleTop="true"
            app:popUpTo="@+id/welcome_nav"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashScreen_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/welcome_nav"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashScreen_to_mainDashboard"
            app:destination="@id/mainDashboard"
            app:launchSingleTop="true"
            app:popUpTo="@+id/welcome_nav"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/onBoardingScreen"
        android:name="com.sampurna.pocketmoney.mlm.ui.welcome.OnBoardingScreen"
        android:label="fragment_on_boarding_screen"
        tools:layout="@layout/fragment_on_boarding_screen" >
        <action
            android:id="@+id/action_onBoardingScreen_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/welcome_nav"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sampurna.pocketmoney.mlm.ui.welcome.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainDashboard"
            app:destination="@id/mainDashboard"
            app:launchSingleTop="true"
            app:popUpTo="@+id/welcome_nav"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sampurna.pocketmoney.mlm.ui.welcome.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_mainDashboard"
            app:destination="@id/mainDashboard"
            app:launchSingleTop="true"
            app:popUpTo="@+id/welcome_nav"
            app:popUpToInclusive="true"/>
    </fragment>
    <activity
        android:id="@+id/mainDashboard"
        android:name="com.sampurna.pocketmoney.mlm.ui.dashboard.MainDashboard"
        android:label="activity_main_dashoboard"
        tools:layout="@layout/activity_main_dashoboard" />
</navigation>