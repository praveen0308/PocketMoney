<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketMoney" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
<!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->

<!--        <item name="fontFamily">@font/metropolis</item>-->
        <item name="fontFamily">@font/roboto_family</item>
        <item name="snackbarStyle">@style/MySnackbar</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>

    </style>


    <style name="CustomProgressDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="android:background">@color/white_eceff1</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="HintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="FieldLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="ValueLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="styleTextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>

        <item name="android:paddingBottom">0dp</item>

    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>