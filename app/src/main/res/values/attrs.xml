<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    <declare-styleable name="CustomKeyboardView">-->
<!--        <attr name="targetEditText" format="reference" />-->

<!--    </declare-styleable>-->
    <declare-styleable name="VerticalTextView">
        <attr name="VT_direction">
            <enum name="uptodown" value="0" />
            <enum name="downtoup" value="1" />
            <enum name="lefttoright" value="2" />
            <enum name="righttoleft" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NumericKeyboard">
        <attr name="field" format="reference" />
        <attr name="fieldMaxLength" format="integer" />

        <attr name="keyHeight" format="dimension" />
        <attr name="keyTextSize" format="dimension" />
        <attr name="keyTextColor" format="color" />

        <attr name="keySpecial" format="string" />
    </declare-styleable>



    <declare-styleable name="MyCustomToolbar">

        <attr name="toolbarNavIcon" format="reference"/>

        <attr name="toolbarMenuIcon" format="reference"/>
        <attr name="menuIconVisibility" format="boolean" />

        <attr name="title" format="string" />
        <attr name="titleVisibility" format="boolean" />
        <attr name="titleTextSize" format="dimension"/>

        <attr name="logoImage" format="reference" />
        <attr name="logoVisibility" format="boolean" />

        <attr name="subtitle" format="string" />
        <attr name="subtitleVisibility" format="boolean" />
        <attr name="subtitleTextSize" format="dimension"/>

    </declare-styleable>


    <declare-styleable name="ApplicationToolbar">

        <attr name="ATNavIcon" format="reference"/>

        <attr name="ATMenuIcon" format="reference"/>
        <attr name="ATMenuIconVisibility" format="boolean" />

        <attr name="ATTitle" format="string" />
        <attr name="ATTitleVisibility" format="boolean" />
        <attr name="ATTitleTextSize" format="dimension"/>
        <attr name="ATTitleGravity" format="enum">
            <enum name="LEFT" value="-1"/>
            <enum name="CENTER" value="0"/>
            <enum name="RIGHT" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="MyEmptyView">

        <attr name="MEVImage" format="reference"/>

        <attr name="MEVTitle" format="string" />
        <attr name="MEVTitleTextSize" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="MyAddressView">
        <attr name="mav_type" format="enum">
            <enum name="type_default" value="0"/>
            <enum name="type_view" value="1"/>

        </attr>

    </declare-styleable>

    <declare-styleable name="LoadingButton">
        <attr name="android:text" format="string"/>

    </declare-styleable>
</resources>