<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout21"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopping.ui.customernavigation.OrderDetails"
    android:background="@color/colorWhiteSmoke"
    >

    <com.sampurna.pocketmoney.utils.ApplicationToolbar
        android:id="@+id/toolbar_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ATNavIcon="@drawable/ic_round_arrow_back_24"
        app:ATTitle="Order Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_order_details">

        <LinearLayout
            android:id="@+id/ll_order_details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">

            <include
                android:id="@+id/order_detail_header"
                layout="@layout/templater_order_detail_header" />

            <com.transferwise.sequencelayout.SequenceLayout
                android:id="@+id/order_tracking_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:progressForegroundColor="@color/colorPrimary"/>



            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Review Product"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:visibility="gone"
                app:icon="@drawable/ic_full_star"
                app:iconGravity="textStart"
                app:iconTint="@color/colorTextPrimary"
                app:strokeColor="@color/material_on_surface_stroke"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_number_of_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextPrimary"
                tools:text="Items" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/template_order_list_item_with_img"
                android:overScrollMode="never"/>

            <TextView
                android:id="@+id/tv_order_shipping_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:text="Shipping Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextPrimary" />

            <com.sampurna.pocketmoney.utils.MyAddressView
                android:id="@+id/address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mav_type="type_view" />
            <TextView
                android:id="@+id/lbl_price_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Price Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextPrimary" />

            <include
                android:id="@+id/orderAmountSummary"
                layout="@layout/layout_order_amount_summary_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>