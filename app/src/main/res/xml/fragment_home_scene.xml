<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/swipe_transition"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/top_layout"
                motion:framePosition="100"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/top_layout"
                motion:framePosition="100"
                android:scaleY="0" />

        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/bottom_layout" />

    </Transition>

    <Transition
        android:id="@+id/wallet_view_transition"
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/start"
        motion:duration="400">
<!--        <OnClick motion:targetId="@+id/top_layout" />-->
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/top_layout"
            android:id="@+id/wallet_detail_view" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/top_layout"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/top_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/wallet_detail_view" />

    </ConstraintSet>
</MotionScene>