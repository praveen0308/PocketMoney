<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:divider="@drawable/keyboard_divider"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end">

    <TableRow style="@style/keyboard_row">

        <TextView
            android:id="@+id/key1"
            style="@style/keyboard_number_button"
            android:text="1" />

        <TextView
            android:id="@+id/key2"
            style="@style/keyboard_number_button"
            android:text="2" />

        <TextView
            android:id="@+id/key3"
            style="@style/keyboard_number_button"
            android:text="3" />
    </TableRow>

    <TableRow style="@style/keyboard_row">

        <TextView
            android:id="@+id/key4"
            style="@style/keyboard_number_button"
            android:text="4" />

        <TextView
            android:id="@+id/key5"
            style="@style/keyboard_number_button"
            android:text="5" />

        <TextView
            android:id="@+id/key6"
            style="@style/keyboard_number_button"
            android:text="6" />
    </TableRow>

    <TableRow style="@style/keyboard_row">

        <TextView
            android:id="@+id/key7"
            style="@style/keyboard_number_button"
            android:text="7" />

        <TextView
            android:id="@+id/key8"
            style="@style/keyboard_number_button"
            android:text="8" />

        <TextView
            android:id="@+id/key9"
            style="@style/keyboard_number_button"
            android:text="9" />
    </TableRow>

    <TableRow style="@style/keyboard_row">

        <TextView
            android:id="@+id/keySpecial"
            style="@style/keyboard_button" />

        <TextView
            android:id="@+id/key0"
            style="@style/keyboard_number_button"
            android:text="0" />

        <com.jmm.custom_keyboard.view.IconifiedTextView
            android:id="@+id/keyRemove"
            style="@style/keyboard_button"
            android:text="&#xe14a;" />
    </TableRow>
</TableLayout>
