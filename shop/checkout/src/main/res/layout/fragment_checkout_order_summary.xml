<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CheckoutOrderSummary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            tools:listitem="@layout/template_cart_item" />

        <fragment
            android:id="@+id/apply_coupon_code_fragment"
            android:name="com.jmm.checkout.apply_coupon.ApplyCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_apply_coupon_code" />

        <fragment
            android:id="@+id/order_calculation_summary"
            android:name="com.jmm.checkout.OrderCalculationSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_order_calculation_summary" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>